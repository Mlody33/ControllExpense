<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Plik">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleRefreshData" text="Odśwież dane" />
                <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Wyjdz" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edytuj">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleChangeCategories" text="Modyfikuj kategorie" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Wydatek">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleAddExpense" text="Dodaj nowy" />
                  <MenuItem mnemonicParsing="false" onAction="#handleEditExpense" text="Edytuj zaznaczony" />
                  <MenuItem mnemonicParsing="false" onAction="#handleDeleteExpense" text="Usuń zaznaczony" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Raporty">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleShowSheetReport" text="Arkusze" />
                <MenuItem mnemonicParsing="false" onAction="#handleShowCharReport" text="Wykresy" />
              </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <bottom>
   </bottom>
</BorderPane>
