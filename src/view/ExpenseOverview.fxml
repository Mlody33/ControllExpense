<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ExpenseController">
   <children>
      <BorderPane layoutX="210.0" layoutY="132.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="expensesTable" onMouseClicked="#handleSelectedExpense" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Nazwa" />
                <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="Kategoria" />
                  <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Cena" />
                  <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Ilosc" />
                  <TableColumn fx:id="paidByCreditCardColumn" prefWidth="75.0" text="Zapłacone kartą" />
                  <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Data" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" prefHeight="25.0" prefWidth="180.0" text="Wybierz dzień do wyświetlenia" />
                        <ComboBox fx:id="cbChoseDayToSort" prefHeight="25.0" prefWidth="180.0" promptText="Zmien dzien" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" prefHeight="25.0" prefWidth="180.0" text="Wybierz miesiąc do wyświetlenia" />
                        <ComboBox fx:id="cbChoseMonthToSort" prefHeight="25.0" prefWidth="180.0" promptText="Zmien miesiąc" />
                     </children>
                  </VBox>
                  <HBox prefHeight="59.0" prefWidth="23.0" HBox.hgrow="ALWAYS" />
                  <HBox prefHeight="59.0" prefWidth="265.0" spacing="10.0">
                     <children>
                        <Button fx:id="newExpenseButton" mnemonicParsing="false" onAction="#handleAddExpense" prefWidth="80.0" text="Nowy" />
                        <Button fx:id="editExpenseButton" mnemonicParsing="false" onAction="#handleEditExpense" prefWidth="80.0" text="Edytuj" />
                        <Button fx:id="removeExpenseButton" mnemonicParsing="false" onAction="#handleRemoveExpense" prefWidth="80.0" text="Usun" />
                     </children>
                     <padding>
                        <Insets top="25.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="3.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
